ifblock BSP_PIC32MZ_EC_PIM_E16

menu "Select BSP Features"
    depends on USE_BSP
    depends on BSP_PIC32MZ_EC_PIM_E16

config BSP_CONFIGURE_PIC32MZ_EC_PIM_E16
    depends on USE_BSP
    select BSP_TRIGGER
    select BSP_POSC_24MHz
    set BSP_PIN_97_FUNCTION_NAME to "SWITCH_4" 
    set BSP_PIN_97_FUNCTION_TYPE to "SWITCH" 
    set BSP_PIN_80_FUNCTION_NAME to "SWITCH_5" 
    set BSP_PIN_80_FUNCTION_TYPE to "SWITCH" 
    set BSP_PIN_58_FUNCTION_NAME to "SWITCH_6" 
    set BSP_PIN_58_FUNCTION_TYPE to "SWITCH" 
    set BSP_PIN_17_FUNCTION_NAME to "LED_3" 
    set BSP_PIN_17_FUNCTION_TYPE to "LED_AH" 
    set BSP_PIN_38_FUNCTION_NAME to "LED_4" 
    set BSP_PIN_38_FUNCTION_TYPE to "LED_AH" 
    set BSP_PIN_59_FUNCTION_NAME to "LED_5" 
    set BSP_PIN_59_FUNCTION_TYPE to "LED_AH" 
    set BSP_PIN_60_FUNCTION_NAME to "LED_6" 
    set BSP_PIN_60_FUNCTION_TYPE to "LED_AH" 
    set BSP_PIN_39_FUNCTION_NAME to "LED_7" 
    set BSP_PIN_39_FUNCTION_TYPE to "LED_AH" 
    set BSP_PIN_40_FUNCTION_NAME to "LED_8" 
    set BSP_PIN_40_FUNCTION_TYPE to "LED_AH" 
    set BSP_PIN_89_FUNCTION_NAME to "LED_9" 
    set BSP_PIN_89_FUNCTION_TYPE to "LED_AH" 
    bool
    ---help---
    IDH_HTML_BSP_pic32mz_ec_pim_e16
    ---endhelp---

endmenu


menu "Custom Board Configurations for Explorer 16 with PIC32MZ EC PIM"
    depends on USE_BSP

import PIC32MZ_EC_PIM_E16_IMPORT_ICB "Select Custom Configuration To Import" 
    default "../*/*.mhc"
    ---help---
    IDH_HTML_Board_Support_Package_Help
    ---endhelp---

template BSP_pic32mz_ec_pim_e16_H "$HARMONY_VERSION_PATH/bsp/pic32mz_ec_pim+e16/templates/bsp.h.ftl" to "$PROJECT_HEADER_FILES/app/system_config/$CONFIGURATION/bsp/bsp.h"
template BSP_pic32mz_ec_pim_e16_C "$HARMONY_VERSION_PATH/bsp/pic32mz_ec_pim+e16/templates/bsp.c.ftl" to "$PROJECT_SOURCE_FILES/app/system_config/$CONFIGURATION/bsp/bsp.c"

compiler BSP_COMPILER_INCLUDE_pic32mz_ec_pim_e16 includepath "$PROJECT_HEADER_FILES/system_config/$CONFIGURATION/bsp"
endmenu

endif
