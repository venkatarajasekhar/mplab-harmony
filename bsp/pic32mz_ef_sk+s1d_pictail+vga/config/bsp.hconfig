config BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA
	bool "Use USART to USB Bridge"
	depends on USE_BSP
	depends on BSP_PIC32MZ_EF_SK_S1D_PICTAIL_VGA
	default y if BSP_USART_BRIDGE_NEEDED
	default n
    set BSP_PIN_61_FUNCTION_TYPE to "U2TX" if BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA
    set BSP_PIN_61_FUNCTION_NAME to "USART to USB Bridge (BSP)" if BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA
    set BSP_PIN_14_FUNCTION_TYPE to "U2RX" if BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA
    set BSP_PIN_14_FUNCTION_NAME to "USART to USB Bridge (BSP)" if BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA

config BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA
	int "USART Driver Instance Index"
	depends on USE_BSP
	depends on BSP_PIC32MZ_EF_SK_S1D_PICTAIL_VGA
	depends on BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA
    range 0 0 if DRV_USART_INSTANCES_NUMBER = 1
    range 0 1 if DRV_USART_INSTANCES_NUMBER = 2
    range 0 2 if DRV_USART_INSTANCES_NUMBER = 3
    range 0 3 if DRV_USART_INSTANCES_NUMBER = 4
    range 0 4 if DRV_USART_INSTANCES_NUMBER = 5
    range 0 5 if DRV_USART_INSTANCES_NUMBER = 6
    range 0 6 if DRV_USART_INSTANCES_NUMBER = 7
    range 0 7 if DRV_USART_INSTANCES_NUMBER = 8
    range 0 8 if DRV_USART_INSTANCES_NUMBER = 9
	default 0
	set DRV_USART_PERIPHERAL_ID_IDX0 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA = 0 && BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA)
	set DRV_USART_PERIPHERAL_ID_IDX1 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA = 1 && BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA)
	set DRV_USART_PERIPHERAL_ID_IDX2 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA = 2 && BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA)
	set DRV_USART_PERIPHERAL_ID_IDX3 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA = 3 && BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA)
	set DRV_USART_PERIPHERAL_ID_IDX4 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA = 4 && BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA)
	set DRV_USART_PERIPHERAL_ID_IDX5 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA = 5 && BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA)
	set DRV_USART_PERIPHERAL_ID_IDX6 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA = 6 && BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA)
	set DRV_USART_PERIPHERAL_ID_IDX7 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA = 7 && BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA)
	set DRV_USART_PERIPHERAL_ID_IDX8 optionally to "USART_ID_2" if (BSP_USART_ID_PIC32MZ_EF_SK_S1D_PICTAIL_VGA = 8 && BSP_USART_BRIDGE_PIC32MZ_EF_SK_S1D_PICTAIL_VGA)


