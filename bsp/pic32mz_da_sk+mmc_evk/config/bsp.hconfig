    set BSP_PIN_281_FUNCTION_TYPE to "LED_AH"
    set BSP_PIN_318_FUNCTION_NAME to "BSP_LED_D6"
    set BSP_PIN_318_FUNCTION_TYPE to "LED_AH"
    set BSP_PIN_89_FUNCTION_NAME to "USB_VBUS_SWITCH"
    set BSP_PIN_89_FUNCTION_TYPE to "VBUS"

