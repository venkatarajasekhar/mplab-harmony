menu "OTM2201a"

config USE_DRV_GFX_OTM2201A_NEEDED
    bool

config USE_DRV_GFX_OTM2201A
    bool "Use OTM2201a Driver?"
    select USE_DRV_PMP_NEEDED
    default n if !USE_DRV_GFX_OTM2201A_NEEDED
