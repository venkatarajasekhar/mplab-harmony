
menu "emWin Touch Wrapper"

depends on SEGGER_EMWIN_TOUCH_WRAPPER

enum EMWIN_SYS_MSG_INSTANCE_ENUM
    "SYS_MSG_0"
    || "SYS_MSG_1"
    || "SYS_MSG_2"
    || "SYS_MSG_3"
    || "SYS_MSG_4"

config EMWIN_TOUCH_SYS_MSG_INSTANCE
depends on SEGGER_EMWIN_TOUCH_WRAPPER
